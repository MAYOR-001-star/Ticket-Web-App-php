{% extends "base.twig" %}

{% block content %}
<div class="max-w-md mx-auto my-16 bg-white shadow-md p-8 rounded-xl">
    <h1 class="text-3xl font-bold mb-6 text-center text-blue-600">
        Sign Up
    </h1>

    <form id="signupForm" class="space-y-5">
        <div>
            <label class="block mb-1 font-medium">Name</label>
            <input type="text" name="name" class="w-full border rounded-md px-3 py-2" />
        </div>

        <div>
            <label class="block mb-1 font-medium">Email</label>
            <input type="email" name="email" class="w-full border rounded-md px-3 py-2" />
        </div>

        <div>
            <label class="block mb-1 font-medium">Password</label>
            <input type="password" name="password" class="w-full border rounded-md px-3 py-2" />
        </div>

        <button type="submit"
            class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-md transition">
            Create Account
        </button>

        <p class="text-center text-sm mt-3">
            Already have an account?
            <a href="/?page=login" class="text-blue-600 hover:underline">Log in</a>
        </p>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
document.getElementById("signupForm").addEventListener("submit", function(e) {
    e.preventDefault();

    const users = JSON.parse(localStorage.getItem("users")) || [];

    const user = {
        name: this.name.value,
        email: this.email.value,
        password: this.password.value,
    };

    if (users.find(u => u.email === user.email)) {
        Toastify({ text: "Email already exists!", backgroundColor: "red" }).showToast();
        return;
    }

    users.push(user);
    localStorage.setItem("users", JSON.stringify(users));

    Toastify({ text: "Account created!", backgroundColor: "green" }).showToast();

    setTimeout(() => {
        window.location.href = "/?page=login";
    }, 1500);
});
</script>
{% endblock %}
